{
 "type": "module",
  "scripts": {
    "firestore": "cross-env FIRESTORE_EMULATOR_HOST=\"localhost:8080\" firebase emulators:exec --import=./devData --ui --only firestore",
    "start": "yarn firestore \"snowpack dev\"",
    "start:firestore": "firebase emulators:start --import=./devData --only firestore",
    "build": "snowpack build",
    "test": "yarn firestore \"NODE_OPTIONS=--experimental-vm-modules npx jest\"",
    "test:watch": "yarn firestore \"NODE_OPTIONS=--experimental-vm-modules npx jest --watch\"",
    "test:ci": "yarn firestore \"jest --coverage\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint --fix --ext js,jsx,ts,tsx --ignore-path .gitignore .",
    "lint:ci": "eslint --ext js,jsx,ts,tsx --ignore-path .gitignore .",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "firebase": "^8.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.14.5",
    "@snowpack/app-scripts-react": "^2.0.1",
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/react": "^6.3.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.1.9",
    "@types/faker": "^5.5.7",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/snowpack-env": "^2.3.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.5.3",
    "firebase-tools": "^9.15.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "snowpack": "^3.7.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
